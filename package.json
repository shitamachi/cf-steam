{
	"name": "steam",
	"type": "module",
	"scripts": {
		"prepare-config": "node ./scripts/prepare-config.mjs",
		"dev": "vite",
		"cf-dev": "wrangler dev",
		"dev:debug": "wrangler dev --inspector-port 9229 --local --port 8787",
		"build": "vite build",
		"preview": "pnpm run build && vite preview",
		"deploy": "pnpm run build && wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"env:setup": "echo 'Please copy .dev.vars.example to .dev.vars and configure your environment variables'",
		"protoc:generate": "mkdir -p /tmp/google/protobuf && ln -sf /usr/local/include/protobuf/* /tmp/google/protobuf/ && protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=src/generated --proto_path=src/pb --proto_path=/tmp src/pb/*.proto",
		"test": "vitest",
		"test:all": "vitest run",
		"vercel:build": "echo 'Building for Vercel...'",
		"vercel:deploy": "vercel deploy",
		"netlify:build": "pnpm run build",
		"netlify:dev": "netlify dev",
		"netlify:deploy": "netlify deploy",
		"netlify:deploy:prod": "netlify deploy --prod",
		"fastly:start": "fastly compute serve",
		"fastly:build": "pnpm run fastly:prebuild && js-compute-runtime ./dist/fastly/index.js ./bin/main.wasm",
		"fastly:deploy": "fastly compute publish",
		"wasm:build": "vite build --config vite.config.wasm.ts",
		"fastly:prebuild": "vite build --config vite.config.prebuild.ts",
		"start": "tsx src/node-server.ts",
		"start:prod": "node dist/steam/node-server.js",
		"build:node": "vite build --config vite.config.node.ts"
	},
	"dependencies": {
		"@fastly/js-compute": "^3.33.2",
		"@hono/node-server": "^1.16.0",
		"@hono/zod-openapi": "^0.19.10",
		"@scalar/hono-api-reference": "^0.9.7",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.8.3",
		"node-fetch": "^3.3.2",
		"steamapi": "github:shitamachi/node-steamapi",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@cloudflare/vite-plugin": "^1.2.3",
		"@cloudflare/vitest-pool-workers": "^0.8.49",
		"@cloudflare/workers-types": "^4.20250628.0",
		"@fastly/cli": "^11.0.0",
		"@protobuf-ts/plugin": "^2.11.1",
		"@protobuf-ts/runtime": "^2.11.1",
		"@protobuf-ts/runtime-rpc": "^2.11.1",
		"@types/node": "^20.10.0",
		"drizzle-kit": "^0.31.4",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite": "6.3.4",
		"vite-ssr-components": "^0.3.0",
		"vitest": "^3.2.4",
		"wrangler": "^4.17.0"
	}
}